pipeline {
    agent {
        label 'jenkins-slave'
    }

    tools {
        jdk 'java17'
        maven 'maven'
    }

    stages {
        stage('Buscar SCM') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/aleyamayab/app-java'
            }
        }

        stage('Build app') {
            steps {
                dir('my-app') {
                    // Establecer el directorio de trabajo en la carpeta que contiene pom.xml
                    sh "mvn clean package"
                }
            }
        }

        stage('Analisis Sonarqube') {
            steps {
                dir('my-app') {
                    // Limpiar el directorio de trabajo
                    deleteDir()

                    // Ejecutar el an√°lisis de SonarQube
                    withSonarQubeEnv(installationName: 'sq1') {
                        sh "mvn sonar:sonar"
                    }
                }
            }
        }
    }
}

